---
const { pathname = "/" } = Astro.props;
const pages = [
    { name: "Online Games", href: "/games" },
    { name: "Jokes", href: "/jokes" },
    { name: "Facts", href: "/facts" },
    { name: "Outdoors", href: "/outdoors" },
];
---

<nav class="tabs is-centered is-boxed">
    <ul>
        {
            pages.map((page) => {
                // Normalize both href and pathname by removing trailing slashes
                const normalize = (str) => str.replace(/\/$/, "");
                const isActive = normalize(page.href) === normalize(pathname);
                return (
                    <li class={isActive ? "is-active" : ""}>
                        <a href={page.href}>{page.name}</a>
                    </li>
                );
            })
        }
    </ul>
</nav>
