---
import OutdoorWheel from "../components/OutdoorWheel.astro";
// import items from "../content/outdoor.json";
import MainLayout from "../layouts/MainLayout.astro";

import type { SanityDocument } from "@sanity/client";
import {sanityClient} from 'sanity:client';

const OUTDOOR_QUERY = `*[
  _type == "outdoorActivity"
]`;

// Get the jokes and shuffle them for a random order on each page load
const data = await sanityClient.fetch<SanityDocument[]>(OUTDOOR_QUERY);
---

<MainLayout title="ðŸŒ³ Outdoor Games" pathname={Astro.url.pathname}>
    <p class="has-text-centered">
        It's important to get outside and enjoy some fresh air during your
        breaks. Here are some fun outdoor games to try!
    </p>
    <p class="has-text-centered">
        Whether you're looking for a quick solo activity or a fun group game,
        we've got you covered.
    </p>
    <OutdoorWheel items={data} />
</MainLayout>
